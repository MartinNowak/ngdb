tests[]=
	hello1
	hello2
	hello3
	recursive
	segfault
	thread
	scope

.DEFAULT: $(tests)

ELIBS = thr

CTest(name) =
	CProgram($(name), $(name))

CXXTest(name) =
	CXXProgram($(name), $(name))

DTest(name) =
	DProgram($(name), $(name))

CTest(hello1)
CXXTest(hello2)
DTest(hello3)
CTest(recursive)
CTest(segfault)
CTest(thread)
CTest(scope)
